@{ 
    
    ViewData["Title"] = "Programmers Calculator| String To Base64";
}

<div class="row">
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <label for="from">Enter String</label>
                <textarea type="text" id="userInput" class="form-control" id="from" placeholder="Plain Text"></textarea>
            </div>
            <div class="form-group">
                <label for="to">Decoded String</label>
                <textarea type="text" class="form-control" id="to" placeholder="Base64 Encoded"></textarea>
            </div>
            <div>
                <input type="button" value="Convert" id="sendButton" class="btn btn-lg btn-success">
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/base64.js"></script>
}
